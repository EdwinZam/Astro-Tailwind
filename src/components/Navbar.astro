---
import { Cross, Heart, BookOpen, User, Mail } from 'lucide-astro';

const currentPath = Astro.url.pathname;
---

<nav class="bg-white/95 backdrop-blur-sm shadow-lg border-b border-spiritual-100 sticky top-0 z-50">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between items-center h-16">
      <!-- Logo -->
      <div class="flex items-center space-x-2">
        <div class="relative">
          <Cross class="w-8 h-8 text-spiritual-600" />
          <div class="absolute -top-1 -right-1 w-3 h-3">
            <div class="w-full h-full bg-gold-400 rounded-full opacity-60 animate-pulse"></div>
          </div>
        </div>
        <span class="font-serif text-2xl font-bold text-spiritual-900">Grace & Light</span>
      </div>

      <!-- Desktop Navigation -->
      <div class="hidden md:flex items-center space-x-8">
        <a href="/" class={`flex items-center space-x-1 px-3 py-2 rounded-lg transition-all duration-300 ${currentPath === '/' ? 'text-spiritual-600 bg-spiritual-50' : 'text-gray-700 hover:text-spiritual-600 hover:bg-spiritual-50'}`}>
          <Heart class="w-4 h-4" />
          <span>Home</span>
        </a>
        
        <a href="/blog" class={`flex items-center space-x-1 px-3 py-2 rounded-lg transition-all duration-300 ${currentPath.startsWith('/blog') ? 'text-spiritual-600 bg-spiritual-50' : 'text-gray-700 hover:text-spiritual-600 hover:bg-spiritual-50'}`}>
          <BookOpen class="w-4 h-4" />
          <span>Blog</span>
        </a>

        <a href="/bible-verses" class={`flex items-center space-x-1 px-3 py-2 rounded-lg transition-all duration-300 ${currentPath.startsWith('/bible-verses') ? 'text-spiritual-600 bg-spiritual-50' : 'text-gray-700 hover:text-spiritual-600 hover:bg-spiritual-50'}`}>
          <BookOpen class="w-4 h-4" />
          <span>Bible Verses</span>
        </a>

        <a href="/about" class={`flex items-center space-x-1 px-3 py-2 rounded-lg transition-all duration-300 ${currentPath === '/about' ? 'text-spiritual-600 bg-spiritual-50' : 'text-gray-700 hover:text-spiritual-600 hover:bg-spiritual-50'}`}>
          <User class="w-4 h-4" />
          <span>About</span>
        </a>

        <a href="/contact" class={`flex items-center space-x-1 px-3 py-2 rounded-lg transition-all duration-300 ${currentPath === '/contact' ? 'text-spiritual-600 bg-spiritual-50' : 'text-gray-700 hover:text-spiritual-600 hover:bg-spiritual-50'}`}>
          <Mail class="w-4 h-4" />
          <span>Contact</span>
        </a>
      </div>

      <!-- Mobile menu button -->
      <div class="md:hidden">
        <button id="mobile-menu-button" class="text-gray-700 hover:text-spiritual-600 p-2">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
          </svg>
        </button>
      </div>
    </div>

    <!-- Mobile Navigation -->
    <div id="mobile-menu" class="md:hidden hidden border-t border-spiritual-100 py-4">
      <div class="flex flex-col space-y-2">
        <a href="/" class={`flex items-center space-x-2 px-3 py-2 rounded-lg transition-all duration-300 ${currentPath === '/' ? 'text-spiritual-600 bg-spiritual-50' : 'text-gray-700'}`}>
          <Heart class="w-4 h-4" />
          <span>Home</span>
        </a>
        
        <a href="/blog" class={`flex items-center space-x-2 px-3 py-2 rounded-lg transition-all duration-300 ${currentPath.startsWith('/blog') ? 'text-spiritual-600 bg-spiritual-50' : 'text-gray-700'}`}>
          <BookOpen class="w-4 h-4" />
          <span>Blog</span>
        </a>

        <a href="/bible-verses" class={`flex items-center space-x-2 px-3 py-2 rounded-lg transition-all duration-300 ${currentPath.startsWith('/bible-verses') ? 'text-spiritual-600 bg-spiritual-50' : 'text-gray-700'}`}>
          <BookOpen class="w-4 h-4" />
          <span>Bible Verses</span>
        </a>

        <a href="/about" class={`flex items-center space-x-2 px-3 py-2 rounded-lg transition-all duration-300 ${currentPath === '/about' ? 'text-spiritual-600 bg-spiritual-50' : 'text-gray-700'}`}>
          <User class="w-4 h-4" />
          <span>About</span>
        </a>

        <a href="/contact" class={`flex items-center space-x-2 px-3 py-2 rounded-lg transition-all duration-300 ${currentPath === '/contact' ? 'text-spiritual-600 bg-spiritual-50' : 'text-gray-700'}`}>
          <Mail class="w-4 h-4" />
          <span>Contact</span>
        </a>
      </div>
    </div>
  </div>
</nav>

<script>
  const mobileMenuButton = document.getElementById('mobile-menu-button');
  const mobileMenu = document.getElementById('mobile-menu');

  mobileMenuButton?.addEventListener('click', () => {
    mobileMenu?.classList.toggle('hidden');
  });
</script>