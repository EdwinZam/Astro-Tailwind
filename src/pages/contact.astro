---
import Layout from '../layouts/Layout.astro';
import Navbar from '../components/Navbar.astro';
import Footer from '../components/Footer.astro';
import { Mail, Phone, MapPin, Heart, Send } from 'lucide-astro';
---

<Layout title="Contact Us - Grace & Light" description="Get in touch with our ministry team. We'd love to hear from you and pray with you.">
  <Navbar />
  
  <main class="min-h-screen">
    <!-- Header -->
    <section class="bg-gradient-to-r from-spiritual-50 to-beige-50 py-16">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
        <div class="flex justify-center mb-6">
          <Heart class="w-16 h-16 text-spiritual-600" />
        </div>
        <h1 class="font-serif text-4xl md:text-5xl font-bold text-spiritual-900 mb-6">
          Connect With Us
        </h1>
        <p class="text-xl text-gray-700 max-w-3xl mx-auto">
          We'd love to hear from you. Whether you need prayer, have questions about faith, 
          or simply want to connect with our community, we're here for you.
        </p>
      </div>
    </section>

    <!-- Contact Form and Info -->
    <section class="py-20">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-12">
          <!-- Contact Form -->
          <div class="bg-white p-8 rounded-xl shadow-lg">
            <h2 class="font-serif text-2xl font-bold text-spiritual-900 mb-6">
              Send Us a Message
            </h2>
            
            <form class="space-y-6" id="contact-form">
              <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
                <div>
                  <label for="firstName" class="block text-sm font-medium text-gray-700 mb-2">
                    First Name *
                  </label>
                  <input 
                    type="text" 
                    id="firstName" 
                    name="firstName"
                    required
                    class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-spiritual-500 focus:border-spiritual-500 outline-none transition-colors"
                  />
                </div>
                
                <div>
                  <label for="lastName" class="block text-sm font-medium text-gray-700 mb-2">
                    Last Name *
                  </label>
                  <input 
                    type="text" 
                    id="lastName" 
                    name="lastName"
                    required
                    class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-spiritual-500 focus:border-spiritual-500 outline-none transition-colors"
                  />
                </div>
              </div>
              
              <div>
                <label for="email" class="block text-sm font-medium text-gray-700 mb-2">
                  Email Address *
                </label>
                <input 
                  type="email" 
                  id="email" 
                  name="email"
                  required
                  class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-spiritual-500 focus:border-spiritual-500 outline-none transition-colors"
                />
              </div>
              
              <div>
                <label for="phone" class="block text-sm font-medium text-gray-700 mb-2">
                  Phone Number (Optional)
                </label>
                <input 
                  type="tel" 
                  id="phone" 
                  name="phone"
                  class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-spiritual-500 focus:border-spiritual-500 outline-none transition-colors"
                />
              </div>
              
              <div>
                <label for="subject" class="block text-sm font-medium text-gray-700 mb-2">
                  Subject *
                </label>
                <select 
                  id="subject" 
                  name="subject"
                  required
                  class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-spiritual-500 focus:border-spiritual-500 outline-none transition-colors"
                >
                  <option value="">Select a subject</option>
                  <option value="prayer-request">Prayer Request</option>
                  <option value="faith-question">Question About Faith</option>
                  <option value="testimony">Share a Testimony</option>
                  <option value="general-inquiry">General Inquiry</option>
                  <option value="technical-support">Technical Support</option>
                </select>
              </div>
              
              <div>
                <label for="message" class="block text-sm font-medium text-gray-700 mb-2">
                  Message *
                </label>
                <textarea 
                  id="message" 
                  name="message"
                  rows="6"
                  required
                  placeholder="Please share what's on your heart. We're here to listen and pray with you."
                  class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-spiritual-500 focus:border-spiritual-500 outline-none transition-colors resize-none"
                ></textarea>
              </div>
              
              <div class="flex items-center">
                <input 
                  type="checkbox" 
                  id="newsletter" 
                  name="newsletter"
                  class="w-4 h-4 text-spiritual-600 border-gray-300 rounded focus:ring-spiritual-500"
                />
                <label for="newsletter" class="ml-2 text-sm text-gray-700">
                  I'd like to receive weekly encouragement and updates via email
                </label>
              </div>
              
              <button 
                type="submit"
                class="w-full bg-spiritual-600 hover:bg-spiritual-700 text-white py-4 px-6 rounded-lg font-semibold transition-all duration-300 flex items-center justify-center space-x-2 shadow-lg hover:shadow-xl"
              >
                <Send class="w-5 h-5" />
                <span>Send Message</span>
              </button>
            </form>
          </div>

          <!-- Contact Information -->
          <div class="space-y-8">
            <div class="bg-spiritual-50 p-8 rounded-xl">
              <h2 class="font-serif text-2xl font-bold text-spiritual-900 mb-6">
                Get in Touch
              </h2>
              
              <div class="space-y-6">
                <div class="flex items-start space-x-4">
                  <div class="w-12 h-12 bg-spiritual-100 rounded-lg flex items-center justify-center flex-shrink-0">
                    <Mail class="w-6 h-6 text-spiritual-600" />
                  </div>
                  <div>
                    <h3 class="font-semibold text-spiritual-900 mb-1">Email</h3>
                    <p class="text-gray-700">hello@graceandlight.com</p>
                    <p class="text-sm text-gray-600">We typically respond within 24 hours</p>
                  </div>
                </div>
                
                <div class="flex items-start space-x-4">
                  <div class="w-12 h-12 bg-gold-100 rounded-lg flex items-center justify-center flex-shrink-0">
                    <Phone class="w-6 h-6 text-gold-600" />
                  </div>
                  <div>
                    <h3 class="font-semibold text-spiritual-900 mb-1">Phone</h3>
                    <p class="text-gray-700">+1 (555) 123-4567</p>
                    <p class="text-sm text-gray-600">Available Mon-Fri, 9AM-5PM EST</p>
                  </div>
                </div>
                
                <div class="flex items-start space-x-4">
                  <div class="w-12 h-12 bg-beige-100 rounded-lg flex items-center justify-center flex-shrink-0">
                    <MapPin class="w-6 h-6 text-beige-700" />
                  </div>
                  <div>
                    <h3 class="font-semibold text-spiritual-900 mb-1">Address</h3>
                    <p class="text-gray-700">123 Faith Street<br>Hope City, HC 12345</p>
                    <p class="text-sm text-gray-600">Visitors welcome by appointment</p>
                  </div>
                </div>
              </div>
            </div>

            <!-- Prayer Request Box -->
            <div class="bg-gold-50 p-8 rounded-xl border border-gold-200">
              <div class="flex items-center space-x-3 mb-4">
                <Heart class="w-6 h-6 text-gold-600" />
                <h3 class="font-serif text-xl font-semibold text-spiritual-900">
                  Need Prayer?
                </h3>
              </div>
              <p class="text-gray-700 mb-4">
                Our prayer team is committed to lifting up your needs before God. 
                No request is too big or too small.
              </p>
              <p class="text-sm text-gray-600 italic">
                "Therefore I tell you, whatever you ask for in prayer, believe that you have received it, and it will be yours." - Mark 11:24
              </p>
            </div>

            <!-- Response Time -->
            <div class="bg-spiritual-100 p-6 rounded-xl">
              <h3 class="font-semibold text-spiritual-900 mb-2">Our Commitment to You</h3>
              <ul class="text-sm text-gray-700 space-y-1">
                <li>• Prayer requests receive immediate attention</li>
                <li>• General inquiries answered within 24 hours</li>
                <li>• All messages treated with confidentiality and care</li>
                <li>• Personal responses from our ministry team</li>
              </ul>
            </div>
          </div>
        </div>
      </div>
    </section>
  </main>

  <Footer />
</Layout>