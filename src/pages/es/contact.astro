---
import Layout from '../../layouts/Layout.astro';
import Navbar from '../../components/Navbar.astro';
import Footer from '../../components/Footer.astro';
import { Mail, Phone, MapPin, Heart, Send } from 'lucide-astro';
import { getI18N } from '../../i18n/utils';

const { currentLocale } = Astro;
const i18n = getI18N({ currentLocale });
---

<Layout title={i18n['contact.title']} description={i18n['contact.description']}>
  <Navbar />
  
  <main class="min-h-screen">
    <!-- Header -->
    <section class="bg-gradient-to-r from-spiritual-50 to-beige-50 py-16">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
        <div class="flex justify-center mb-6">
          <Heart class="w-16 h-16 text-spiritual-600" />
        </div>
        <h1 class="font-serif text-4xl md:text-5xl font-bold text-spiritual-900 mb-6">
          {i18n['contact.header']}
        </h1>
        <p class="text-xl text-gray-700 max-w-3xl mx-auto">
          {i18n['contact.header_desc']}
        </p>
      </div>
    </section>

    <!-- Contact Form and Info -->
    <section class="py-20">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-12">
          <!-- Contact Form -->
          <div class="bg-white p-8 rounded-xl shadow-lg">
            <h2 class="font-serif text-2xl font-bold text-spiritual-900 mb-6">
              {i18n['contact.form_title']}
            </h2>
            
            <form class="space-y-6" id="contact-form">
              <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
                <div>
                  <label for="firstName" class="block text-sm font-medium text-gray-700 mb-2">
                    {i18n['contact.form_firstname']}
                  </label>
                  <input 
                    type="text" 
                    id="firstName" 
                    name="firstName"
                    required
                    class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-spiritual-500 focus:border-spiritual-500 outline-none transition-colors"
                  />
                </div>
                
                <div>
                  <label for="lastName" class="block text-sm font-medium text-gray-700 mb-2">
                    {i18n['contact.form_lastname']}
                  </label>
                  <input 
                    type="text" 
                    id="lastName" 
                    name="lastName"
                    required
                    class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-spiritual-500 focus:border-spiritual-500 outline-none transition-colors"
                  />
                </div>
              </div>
              
              <div>
                <label for="email" class="block text-sm font-medium text-gray-700 mb-2">
                  {i18n['contact.form_email']}
                </label>
                <input 
                  type="email" 
                  id="email" 
                  name="email"
                  required
                  class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-spiritual-500 focus:border-spiritual-500 outline-none transition-colors"
                />
              </div>
              
              <div>
                <label for="phone" class="block text-sm font-medium text-gray-700 mb-2">
                  {i18n['contact.form_phone']}
                </label>
                <input 
                  type="tel" 
                  id="phone" 
                  name="phone"
                  class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-spiritual-500 focus:border-spiritual-500 outline-none transition-colors"
                />
              </div>
              
              <div>
                <label for="subject" class="block text-sm font-medium text-gray-700 mb-2">
                  {i18n['contact.form_subject']}
                </label>
                <select 
                  id="subject" 
                  name="subject"
                  required
                  class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-spiritual-500 focus:border-spiritual-500 outline-none transition-colors"
                >
                  <option value="">{i18n['contact.form_subject_placeholder']}</option>
                  <option value="prayer-request">{i18n['contact.form_subject_prayer']}</option>
                  <option value="faith-question">{i18n['contact.form_subject_question']}</option>
                  <option value="testimony">{i18n['contact.form_subject_testimony']}</option>
                  <option value="general-inquiry">{i18n['contact.form_subject_general']}</option>
                  <option value="technical-support">{i18n['contact.form_subject_support']}</option>
                </select>
              </div>
              
              <div>
                <label for="message" class="block text-sm font-medium text-gray-700 mb-2">
                  {i18n['contact.form_message']}
                </label>
                <textarea 
                  id="message" 
                  name="message"
                  rows="6"
                  required
                  placeholder={i18n['contact.form_message_placeholder']}
                  class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-spiritual-500 focus:border-spiritual-500 outline-none transition-colors resize-none"
                ></textarea>
              </div>
              
              <div class="flex items-center">
                <input 
                  type="checkbox" 
                  id="newsletter" 
                  name="newsletter"
                  class="w-4 h-4 text-spiritual-600 border-gray-300 rounded focus:ring-spiritual-500"
                />
                <label for="newsletter" class="ml-2 text-sm text-gray-700">
                  {i18n['contact.form_newsletter']}
                </label>
              </div>
              
              <button 
                type="submit"
                class="w-full bg-spiritual-600 hover:bg-spiritual-700 text-white py-4 px-6 rounded-lg font-semibold transition-all duration-300 flex items-center justify-center space-x-2 shadow-lg hover:shadow-xl"
              >
                <Send class="w-5 h-5" />
                <span>{i18n['contact.form_send']}</span>
              </button>
            </form>
          </div>

          <!-- Contact Information -->
          <div class="space-y-8">
            <div class="bg-spiritual-50 p-8 rounded-xl">
              <h2 class="font-serif text-2xl font-bold text-spiritual-900 mb-6">
                {i18n['contact.info_title']}
              </h2>
              
              <div class="space-y-6">
                <div class="flex items-start space-x-4">
                  <div class="w-12 h-12 bg-spiritual-100 rounded-lg flex items-center justify-center flex-shrink-0">
                    <Mail class="w-6 h-6 text-spiritual-600" />
                  </div>
                  <div>
                    <h3 class="font-semibold text-spiritual-900 mb-1">{i18n['contact.info_email']}</h3>
                    <p class="text-gray-700">{i18n['contact.info_email_address']}</p>
                    <p class="text-sm text-gray-600">{i18n['contact.info_email_response']}</p>
                  </div>
                </div>
                
                <div class="flex items-start space-x-4">
                  <div class="w-12 h-12 bg-gold-100 rounded-lg flex items-center justify-center flex-shrink-0">
                    <Phone class="w-6 h-6 text-gold-600" />
                  </div>
                  <div>
                    <h3 class="font-semibold text-spiritual-900 mb-1">{i18n['contact.info_phone']}</h3>
                    <p class="text-gray-700">{i18n['contact.info_phone_number']}</p>
                    <p class="text-sm text-gray-600">{i18n['contact.info_phone_hours']}</p>
                  </div>
                </div>
                
                <div class="flex items-start space-x-4">
                  <div class="w-12 h-12 bg-beige-100 rounded-lg flex items-center justify-center flex-shrink-0">
                    <MapPin class="w-6 h-6 text-beige-700" />
                  </div>
                  <div>
                    <h3 class="font-semibold text-spiritual-900 mb-1">{i18n['contact.info_address']}</h3>
                    <p class="text-gray-700">{i18n['contact.info_address_street']}<br>{i18n['contact.info_address_city']}</p>
                    <p class="text-sm text-gray-600">{i18n['contact.info_address_visitors']}</p>
                  </div>
                </div>
              </div>
            </div>

            <!-- Prayer Request Box -->
            <div class="bg-gold-50 p-8 rounded-xl border border-gold-200">
              <div class="flex items-center space-x-3 mb-4">
                <Heart class="w-6 h-6 text-gold-600" />
                <h3 class="font-serif text-xl font-semibold text-spiritual-900">
                  {i18n['contact.prayer_title']}
                </h3>
              </div>
              <p class="text-gray-700 mb-4">
                {i18n['contact.prayer_desc']}
              </p>
              <p class="text-sm text-gray-600 italic">
                {i18n['contact.prayer_verse']}
              </p>
            </div>

            <!-- Response Time -->
            <div class="bg-spiritual-100 p-6 rounded-xl">
              <h3 class="font-semibold text-spiritual-900 mb-2">{i18n['contact.commitment_title']}</h3>
              <ul class="text-sm text-gray-700 space-y-1">
                <li>{i18n['contact.commitment_item1']}</li>
                <li>{i18n['contact.commitment_item2']}</li>
                <li>{i18n['contact.commitment_item3']}</li>
                <li>{i18n['contact.commitment_item4']}</li>
              </ul>
            </div>
          </div>
        </div>
      </div>
    </section>
  </main>

  <Footer />
</Layout>