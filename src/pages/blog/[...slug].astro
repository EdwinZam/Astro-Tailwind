---
import { getCollection } from 'astro:content';
import Layout from '../../layouts/Layout.astro';
import Navbar from '../../components/Navbar.astro';
import Footer from '../../components/Footer.astro';
import { getI18N } from '../../i18n/utils';

export async function getStaticPaths() {
  const blogEntries = await getCollection('blog');
  return blogEntries.map(entry => ({
    params: { slug: entry.slug }, props: { entry },
  }));
}

const { entry } = Astro.props;
const { Content } = await entry.render();
const { currentLocale } = Astro;
const i18n = getI18N({ currentLocale });
---
<Layout title={entry.data.title}>
  <Navbar />
  <main class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <article>
      <h1 class="font-serif text-4xl font-bold text-spiritual-900 mb-4">{entry.data.title}</h1>
      <p class="text-lg text-gray-600 mb-8">{entry.data.description}</p>
      <img src={entry.data.image.url} alt={entry.data.image.alt} class="rounded-lg shadow-lg mb-8">
      <div class="prose max-w-none">
        <Content />
      </div>
    </article>
  </main>
  <Footer />
</Layout>