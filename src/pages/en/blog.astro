---
import Layout from '../../layouts/Layout.astro';
import Navbar from '../../components/Navbar.astro';
import Footer from '../../components/Footer.astro';
import { blogPosts } from '../../data/verses.js';
import { BookOpen, User, Calendar, ArrowRight } from 'lucide-astro';
import { getI18N } from '../../i18n/utils';

const { currentLocale } = Astro;
const i18n = getI18N({ currentLocale });
---

<Layout title={i18n['blog.title']} description={i18n['blog.description']}>
  <Navbar />
  
  <main class="min-h-screen">
    <!-- Header -->
    <section class="bg-gradient-to-r from-spiritual-50 to-beige-50 py-16">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
        <div class="flex justify-center mb-6">
          <BookOpen class="w-16 h-16 text-spiritual-600" />
        </div>
        <h1 class="font-serif text-4xl md:text-5xl font-bold text-spiritual-900 mb-6">
          {i18n['blog.header']}
        </h1>
        <p class="text-xl text-gray-700 max-w-3xl mx-auto">
          {i18n['blog.header_desc']}
        </p>
      </div>
    </section>

    <!-- Blog Posts -->
    <section class="py-16">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="grid grid-cols-1 lg:grid-cols-2 xl:grid-cols-3 gap-8">
          {blogPosts.map((post) => (
            <article class="bg-white rounded-xl shadow-lg hover:shadow-xl transition-all duration-300 overflow-hidden group">
              <div class="aspect-w-16 aspect-h-9 overflow-hidden">
                <img 
                  src={post.image} 
                  alt={post.title}
                  class="w-full h-48 object-cover group-hover:scale-105 transition-transform duration-300"
                />
              </div>
              
              <div class="p-6">
                <div class="flex items-center space-x-4 mb-4 text-sm text-gray-600">
                  <div class="flex items-center space-x-1">
                    <User class="w-4 h-4" />
                    <span>{post.author}</span>
                  </div>
                  <div class="flex items-center space-x-1">
                    <Calendar class="w-4 h-4" />
                    <span>{new Date(post.date).toLocaleDateString()}</span>
                  </div>
                </div>
                
                <div class="mb-3">
                  <span class="bg-spiritual-100 text-spiritual-700 px-3 py-1 rounded-full text-sm font-medium mr-2">
                    {post.category}
                  </span>
                </div>
                
                <h2 class="font-serif text-xl font-bold text-spiritual-900 mb-3 group-hover:text-spiritual-700 transition-colors">
                  {post.title}
                </h2>
                
                <p class="text-gray-700 mb-4 leading-relaxed">
                  {post.excerpt}
                </p>
                
                <a 
                  href={`/en/blog/${post.id}`}
                  class="inline-flex items-center space-x-2 text-spiritual-600 hover:text-spiritual-800 font-semibold transition-colors group/link"
                >
                  <span>{i18n['blog.read_more']}</span>
                  <ArrowRight class="w-4 h-4 group-hover/link:translate-x-1 transition-transform" />
                </a>
              </div>
            </article>
          ))}
        </div>
      </div>
    </section>

    <!-- Call to Action -->
    <section class="bg-spiritual-900 text-white py-16">
      <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
        <h2 class="font-serif text-3xl font-bold mb-4">
          {i18n['blog.stay_connected']}
        </h2>
        <p class="text-xl text-spiritual-200 mb-8">
          {i18n['blog.newsletter_desc']}
        </p>
        
        <div class="max-w-md mx-auto flex">
          <input 
            type="email" 
            placeholder="Enter your email"
            class="flex-1 px-4 py-3 rounded-l-lg text-gray-900 focus:outline-none focus:ring-2 focus:ring-gold-400"
          />
          <button class="bg-gold-500 hover:bg-gold-600 px-6 py-3 rounded-r-lg font-semibold transition-colors">
            {i18n['blog.subscribe']}
          </button>
        </div>
      </div>
    </section>
  </main>

  <Footer />
</Layout>